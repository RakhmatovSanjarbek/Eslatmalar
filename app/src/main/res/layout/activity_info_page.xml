<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bacground"
    tools:context=".InfoPageActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/info_page_cardview"
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:cardBackgroundColor="@color/bacground"
        app:cardCornerRadius="120dp"
        android:layout_centerInParent="true"
        app:cardElevation="8dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/first_splash_page_logos"
            android:layout_margin="20dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/eslatmalar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eslatmalar"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/main_color"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/info_page_cardview"
        android:layout_marginTop="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.1.0"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/eslatmalar"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:textColor="@color/main_color"
        android:textStyle="normal"/>



</RelativeLayout>